<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             xmlns:styles="clr-namespace:WeatherApp.Styles"
             xmlns:converters="clr-namespace:WeatherApp.Converters"
             x:Class="WeatherApp.App">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <converters:AppThemeIconConverter x:Key="AppThemeIconConverter"/>
            <converters:UnitConverter x:Key="UnitConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <styles:Theme></styles:Theme>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>